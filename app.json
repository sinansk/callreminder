{
  "expo": {
    "name": "CallReminder",
    "slug": "CallReminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "permissions": {
        "notifications": {
          "allowAlert": true,
          "allowBadge": true,
          "allowSound": true
        }
      },
      "infoPlist": {
        "NSCallHistoryUsageDescription": "Uygulamanın çağrı geçmişine erişmesi gerekiyor."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sinansk.CallReminder",
      "useNextNotificationsApi": true,
      "permissions": [
        "READ_CALL_LOG"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
